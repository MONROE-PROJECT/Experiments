FROM monroe/base

MAINTAINER jonas.karlsson@kau.se

RUN mkdir -p /opt/monroe
RUN mkdir -p /monroe

COPY files/* /opt/monroe/

RUN apt-get update && apt-get install -y --force-yes python-pip \
    && pip install pyotp && pip install psutil

# Default cmd to run
ENTRYPOINT ["dumb-init", "--", "/usr/bin/python", "/opt/monroe/server.py"]
